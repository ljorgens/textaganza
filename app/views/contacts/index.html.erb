
<h2>Address Book</h2>
<div class="col-md-12">
  <div class="row">
    <ul id="contacts">
        <% @contacts.each do |contact| %>
      <li><%= contact.name %>, <%= contact.user_number %>
      </li>
      <% end %>
    </ul>
  </div>
<p><%= link_to "Add Contact", new_contact_path %></p>

<p><%= link_to "Return Home", root_path %></p>
  <div class="row">
    Contacts To Send To
    <ul id = "clicker">
        <%=link_to "Add to Message", new_message_path(to: @contact.user_number) %>
    </ul>
  </div>
</div>

<script>
$('#contacts li').click(function(){
  $(this).appendTo('#clicker');
});
</script>
