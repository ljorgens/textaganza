<% if current_user %>

<%= link_to "New Message", new_message_path %>

<% end %>


<h1>Messages</h1>
<div class="col-md-12">
  <div class="row">
    <ul class="list-unstyled">
      <% @messages.each do |message| %>
        <li> 
          <%= link_to message.to, message_path(message) %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
<p><%= link_to "Return Home", root_path %></p>
