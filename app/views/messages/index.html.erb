<% if current_user %>

<%= link_to "New Message", new_message_path, class: "btn btn-info" %>

<% end %>


<h1>Messages</h1>

<ul class="list-unstyled">
  <% @messages.each do |message| %>
  <li><i class="fa fa-star"></i> <%= link_to message.id, message_path(message) %> - <%= message.user.name %></li>
  <% end %>
</ul>
